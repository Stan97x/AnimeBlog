{# templates/list/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Post</h1>
    
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(form.summary, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.summary, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.summary) }}
        </div>
        <div class="form-group">
            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.content) }}
        </div>
        <div class="form-group">
            {{ form_label(form.create_at, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.create_at, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.create_at) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('list_index') }}" class="btn btn-secondary">Back to list</a>
</div>

<style>

h1 {
    font-size: 2rem;
    color: #333;
}

.form-group {
    margin-bottom: 1rem;
}

.form-label {
    font-weight: bold;
}

.form-control {
    border-radius: 4px;
    box-shadow: none;
    border: 1px solid #ced4da;
}

.form-control:focus {
    border-color: #80bdff;
    box-shadow: 0 0 0 .2rem rgba(38, 143, 255, .25);
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    border-radius: 4px;
    font-size: 16px;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
}

.btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
    border-radius: 4px;
    font-size: 16px;
    margin-top: 10px;
}

.btn-secondary:hover {
    background-color: #5a6268;
    border-color: #4e555b;
}
</style>
{% endblock %}
